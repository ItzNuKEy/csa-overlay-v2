// electron-builder.json5
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.playcsa.casterkit",
  "asar": true,
  "productName": "CSA Caster Production Kit",
  "directories": {
    "output": "release/${version}",
    "buildResources": "resources"
  },
  "files": [
    "dist/**",
    "dist-electron/**"
  ],
  "extraResources": [
    { "from": "electron/electron-services", "to": "electron-services" },
    { "from": "node_modules/ws", "to": "electron-services/node_modules/ws" },
    { "from": "node_modules/cli-msg", "to": "electron-services/node_modules/cli-msg" },
    { "from": "node_modules/atob", "to": "electron-services/node_modules/atob" },
    { "from": ".env", "to": ".env" },
    { "from": "resources/bakkesmod", "to": "bakkesmod", "filter": ["**/*"] }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "ItzNuKEy",
      "repo": "csa-overlay-v2"
    }
  ],
  "win": {
    "target": [{ "target": "nsis", "arch": ["x64"] }],
    "icon": "resources/CSABroadcastIcon.ico",
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": true,                        // ✅ one-click installer
    "perMachine": false,                     // per-user is fine
    "allowToChangeInstallationDirectory": false, // ✅ required for smooth auto-update
    "deleteAppDataOnUninstall": false,
    "installerIcon": "resources/CSABroadcastIcon.ico",
    "uninstallerIcon": "resources/CSABroadcastIcon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  }
}
